<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgView_chat"
        android:src="@mipmap/ic_launcher"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_chat"
        android:text="닉네임"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="24dp"
        app:layout_constraintLeft_toRightOf="@id/imgView_chat"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_chat"
        android:text="홍은동"
        android:textSize="15sp"
        android:textColor="#737373"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="27dp"
        app:layout_constraintLeft_toRightOf="@id/name_chat"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_chat"
        android:text="채팅 내용"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toRightOf="@id/imgView_chat"
        app:layout_constraintTop_toBottomOf="@id/name_chat"/>


    <View
        android:id="@+id/line"
        android:background="#e3e3e3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/chat_chat"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>