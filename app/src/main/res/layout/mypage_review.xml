<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:contentDescription="이 부분은 스크롤 가능한 뷰입니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sports_icon"
                android:layout_width="50sp"
                android:layout_height="50sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="20sp"
                android:background="@drawable/medal" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="퇴근 후 볼링 한 게임 하실 뿐"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/sports_icon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거래한 이웃    "
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toRightOf="@id/sports_icon"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="20sp" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가바로동네짱"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintLeft_toRightOf="@id/text1" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/sports_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20sp"
                />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대결을 인증할 수 있는 사진을 올려주세요."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <LinearLayout
                android:id="@+id/photo_container"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_add_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:background="@drawable/bg_photo">

                    <ImageView
                        android:id="@+id/iv_camera"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/camera"
                        app:layout_constraintBottom_toTopOf="@id/guideline"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_end="32dp" />

                    <TextView
                        android:contentDescription="현재 이미지 갯수"
                        android:id="@+id/tv_image_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/gray"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/guideline"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tv_max_image"
                        app:layout_constraintHorizontal_chainStyle="packed"

                        />

                    <TextView
                        android:contentDescription="이미지 최대 갯수"
                        android:id="@+id/tv_max_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/10"
                        android:textColor="@color/gray"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/guideline"
                        app:layout_constraintLeft_toRightOf="@id/tv_image_count"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintHorizontal_chainStyle="packed"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/mypage_review_image"/>

            </LinearLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/photo_container"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10sp"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도구리님,"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가바로동네짱님과 대결이 어떠셨나요?"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="20sp"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대결선호도는 나만 볼 수 있어요."
                android:layout_marginLeft="20sp"
                android:layout_marginTop="5sp"
                app:layout_constraintTop_toBottomOf="@id/question"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <ImageButton
                android:id="@+id/good_btn"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="20sp"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/bad_btn"
                android:background="@drawable/good_png" />

            <ImageButton
                android:id="@+id/bad_btn"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginTop="20sp"
                android:background="@drawable/bad"
                app:layout_constraintTop_toBottomOf="@id/text3"
                app:layout_constraintLeft_toRightOf="@id/good_btn"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤 점이 최고였나요?"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/good_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <CheckBox
                android:id="@+id/check1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                app:layout_constraintTop_toBottomOf="@+id/text4"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/review_checkbox"
                android:button="@null" />
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간 약속을 잘 지켜요."
                android:textColor="@color/black"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                app:layout_constraintLeft_toRightOf="@+id/check1"
                app:layout_constraintTop_toBottomOf="@+id/text4" />

            <CheckBox
                android:id="@+id/check2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                app:layout_constraintTop_toBottomOf="@+id/check1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/review_checkbox"
                android:button="@null" />
            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="응답이 빨라요."
                android:textColor="@color/black"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="10sp"
                app:layout_constraintLeft_toRightOf="@+id/check2"
                app:layout_constraintTop_toBottomOf="@+id/text5" />

            <CheckBox
                android:id="@+id/check3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                app:layout_constraintTop_toBottomOf="@+id/check2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/review_checkbox"
                android:button="@null" />
            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친절하고 스포츠매너가 좋아요."
                android:textColor="@color/black"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="10sp"
                app:layout_constraintLeft_toRightOf="@+id/check3"
                app:layout_constraintTop_toBottomOf="@+id/text6" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="도구리님이 보았을 때,"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                app:layout_constraintTop_toBottomOf="@id/text7"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가바로동네짱님과 실력은?"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="20sp"
                app:layout_constraintTop_toBottomOf="@id/text8"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <RadioGroup
                android:id="@+id/match_Group"
                app:layout_constraintTop_toBottomOf="@id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="20sp">

                <RadioButton
                    android:id="@+id/hard_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고수"
                    android:checked="true"
                    android:layout_marginRight="10sp"
                    android:textSize="18sp"
                    />

                <RadioButton
                    android:id="@+id/middle_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중수"
                    android:textSize="18sp"
                    android:layout_marginRight="10sp"/>

                <RadioButton
                    android:id="@+id/easy_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="하수"/>

            </RadioGroup>

            <TextView
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시원했던 대결 경험을 알려주세요! \n남겨주신 대결 후기는 상대방의 프로필에 공개돼요."
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/match_Group"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            
            <EditText
                android:id="@+id/review_et"
                android:layout_width="356sp"
                android:layout_height="185sp"
                android:background="@drawable/review_edittext"
                android:layout_marginTop="10sp"
                app:layout_constraintTop_toBottomOf="@id/text9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:hint="   좋은 대결이었습니다." />
            
            <Button
                android:id="@+id/upload_btn"
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:text="대결 후기 등록하기"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/review_et"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@color/light_gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



















