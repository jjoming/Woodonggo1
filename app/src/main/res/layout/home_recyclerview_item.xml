<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        android:src="@mipmap/ic_launcher"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="아이디"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_profile"/>

    <!--TODO: 새로 추가된 애들-->
    <TextView
        android:id="@+id/text_time"
        android:text="2023.09.18"
        android:textColor="@color/dark_gray"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        app:layout_constraintTop_toTopOf="@+id/text_name"
        app:layout_constraintLeft_toRightOf="@+id/text_name"/>

    <TextView
        android:id="@+id/text_content"
        android:text="게시글 내용"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        app:layout_constraintLeft_toLeftOf="@+id/text_name"
        app:layout_constraintRight_toRightOf="@+id/more"/>

    <ImageView
        android:id="@+id/img_like"
        android:src="@drawable/selector_icon_heart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_content"
        app:layout_constraintRight_toLeftOf="@+id/text_like"/>

    <TextView
        android:id="@+id/text_like"
        android:textStyle="bold"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        app:layout_constraintTop_toTopOf="@+id/img_like"
        app:layout_constraintRight_toLeftOf="@+id/img_category"
        app:layout_constraintBottom_toBottomOf="@+id/img_like"/>

    <ImageView
        android:id="@+id/img_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/imgview_category_bg_custom2"
        app:layout_constraintBottom_toBottomOf="@+id/img_like"
        app:layout_constraintRight_toRightOf="@+id/more"
        app:layout_constraintTop_toTopOf="@+id/img_like" />
    <!---->


    <ImageView
        android:id="@+id/more"
        android:src="@drawable/icon_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/line"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/img_like"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>