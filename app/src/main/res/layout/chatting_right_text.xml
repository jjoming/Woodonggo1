<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <TextView
        android:id="@+id/chatTextMy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/chat_bubble2"
        android:text="안녕하세요"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/timeTextMy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/chatTextMy"
        android:textSize="10sp"
        android:text="12:20pm"
        app:layout_constraintBottom_toBottomOf="@id/chatTextMy"
        android:layout_marginRight="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>